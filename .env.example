# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/transactionmail?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# API
API_PORT=3000
API_HOST="0.0.0.0"
NODE_ENV="development"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# SMTP Relay (incoming)
SMTP_RELAY_PORT=2525
SMTP_RELAY_HOST="0.0.0.0"

# SMTP Outgoing (for sending emails)
SMTP_OUT_HOST="smtp.example.com"
SMTP_OUT_PORT=587
SMTP_OUT_USER=""
SMTP_OUT_PASS=""
SMTP_OUT_SECURE="false"
SMTP_OUT_FROM="noreply@example.com"

# Optional: MailHog for testing
USE_MAILHOG="true"
MAILHOG_SMTP_HOST="mailhog"
MAILHOG_SMTP_PORT=1025

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Webhook
WEBHOOK_SECRET="webhook-signing-secret-change-in-production"

# Admin
NEXT_PUBLIC_API_URL="http://localhost:3000"
ADMIN_PORT=3001
